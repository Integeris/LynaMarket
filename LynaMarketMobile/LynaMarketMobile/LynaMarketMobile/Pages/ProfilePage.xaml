<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LynaMarketMobile.Pages.ProfilePage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>

            <ListView Grid.Row="2" 
                      Style="{StaticResource SettingsListView}">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type Button}">
                        <Button Text="Профиль"/>
                        <Button Text="Выйти"/>
                        <Button Text="Настройки"/>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>

            <Button Grid.Row="3"
                    Text="О программе"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>