<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LynaMarketMobile.Pages.ProfilePage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <ListView Grid.Row="1" 
                        Style="{StaticResource SettingsListView}">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type Button}">
                        <Button Text="Привет"/>
                        <Button Text="Пока"/>
                        <Button Text="О программе"/>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>