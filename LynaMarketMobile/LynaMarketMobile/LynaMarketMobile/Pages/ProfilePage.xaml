<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LynaMarketMobile.Pages.ProfilePage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="55"/>
                <RowDefinition Height="55"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>

            <ListView Grid.Row="2" 
                      Style="{StaticResource SettingsListView}">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type Button}">
                        
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>

            <Button x:Name="ProfileButton" 
                    Grid.Row="2"
                    Text="Профиль"
                    Clicked="ProfileButtonOnClicked"/>
            
            <Button Text="Настройки"
                    Grid.Row="3"/>

            <Button Grid.Row="5"
                    Text="О программе"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>