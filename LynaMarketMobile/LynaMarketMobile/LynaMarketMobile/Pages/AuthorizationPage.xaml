<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LynaMarketMobile.Pages.AuthorizationPage"
             Title="Авторизация">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="Логин:"/>
            <Entry x:Name="LoginEntry"/>
            <Label Text="Пароль:"/>
            <Entry x:Name="PasswordEntry"
                   IsPassword="True"/>
            <Button x:Name="EntryButton" 
                    Text="Войти"
                    Clicked="EntryButtonOnClicked"/>
            <Button x:Name="RecoverPasswordButton" 
                    Text="Восстановить пароль"
                    Clicked="RecoverPasswordButtonOnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>